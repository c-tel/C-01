<Window x:Class="Lapka1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="165"></RowDefinition>
            <RowDefinition Height="59"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="162,2,163,2" HorizontalAlignment="Center" Width="192">Please, choose your birthday date!</Label>
        <Calendar  x:Name="Cal" FirstDayOfWeek="Monday" 
                  SelectedDatesChanged="CalendarDatechanged" Margin="0,29,333,12" Grid.Row="0" Grid.RowSpan="3">
        </Calendar>
        <TextBlock Name="TextBlockAge" 
                    TextWrapping="Wrap" Background="Azure" TextAlignment="Left" FontSize="16" Margin="189,3,0,0" Grid.Row="1">
            Facts about you:
            <LineBreak></LineBreak>
            You haven't cosen any date!
        </TextBlock>
    </Grid>
</Window>
